@page
@model SetPasswordModel
@{
    ViewData["Title"] = "パスワード設定";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="text-light">パスワードを設定してください。</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<p class="text-info">
    このアカウントにはHSDアカウントのユーザー名、パスワードが設定されていません。<br />
    パスワードを設定することで外部認証なしに使用できます。
</p>
<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger text-danger ps-0" role="alert"></div>
            <div class="form-floating">
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" />
                <label asp-for="Input.NewPassword" class="form-label"></label>
                <span asp-validation-for="Input.NewPassword" class="text-warning"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-warning"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">パスワード設定</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
