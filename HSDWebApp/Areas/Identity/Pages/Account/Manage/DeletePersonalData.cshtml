@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "個人情報の削除";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="text-light">@ViewData["Title"]</h3>

<div class="alert alert-warning" role="alert">
    <p class="text-light">
        <strong>アカウントを削除します。削除したアカウント、およびデータの復旧はできません。</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger text-danger ps-0" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="w-100 btn btn-lg btn-danger" type="submit">アカウント削除</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
